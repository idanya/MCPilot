{
  "providers": {
    "openai": {
      "model": "gpt-4",
      "temperature": 0.7,
      "maxTokens": 2048
    },
    "anthropic": {
      "model": "claude-3-7-sonnet-latest",
      "temperature": 1,
      "maxTokens": 4096
    }
  },
  "session": {
    "logDirectory": "./sessions",
    "contextSize": 4096,
    "maxQueueSize": 100,
    "defaultProvider": "anthropic"
  },
  "logging": {
    "level": "debug",
    "format": "json",
    "file": "./logs/system.log",
    "maxFiles": 5,
    "maxSize": "10mb"
  },
  "mcp": {
    "servers": {
      "fetch": {
        "command": "uvx",
        "args": [
          "mcp-server-fetch"
        ]
      },
      "cli-mcp-server": {
        "command": "uvx",
        "args": [
          "cli-mcp-server"
        ],
        "env": {
          "ALLOWED_DIR": "/Users/idanyael/dev/evm-blockchain-tx-watcher",
          "ALLOWED_COMMANDS": "all",
          "ALLOWED_FLAGS": "all",
          "MAX_COMMAND_LENGTH": "1024",
          "COMMAND_TIMEOUT": "30"
        },
        "enabled": true,
        "type": "stdio"
      },
      "fs": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-filesystem",
          "/Users/idanyael/dev/evm-blockchain-tx-watcher"
        ],
        "enabled": true,
        "timeout": 3600,
        "type": "stdio"
      }
    }
  }
}