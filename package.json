{
  "name": "mcpilot",
  "version": "0.1.0",
  "description": "General-purpose system that executes tasks using MCP tooling through prompt-based interactions",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "npx tsx src/cli/index.ts",
    "clean": "rimraf dist",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky install"
  },
  "keywords": [
    "mcp",
    "llm",
    "cli",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.17.1",
    "@modelcontextprotocol/sdk": "^1.6.1",
    "axios": "^1.6.7",
    "commander": "^12.0.0",
    "debug": "^4.3.4",
    "fast-deep-equal": "^3.1.3",
    "llama-node": "^0.1.6",
    "onnxruntime-node": "^1.17.0",
    "openai": "^4.28.0",
    "p-queue": "^7.4.1",
    "stream-json": "^1.8.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
