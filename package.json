{
  "name": "mcpilot",
  "version": "0.1.3",
  "description": "General-purpose system that executes tasks using MCP tooling through prompt-based interactions",
  "type": "module",
  "main": "dist/cli/index.js",
  "scripts": {
    "build:ci": "tsc && npm run build",
    "build": "npm run clean && swc --strip-leading-paths src/ --out-dir dist && npm run postbuild",
    "postbuild": "chmod +x ./dist/cli/index.js",
    "start": "node dist/index.js",
    "dev": "npx tsx src/cli/index.ts",
    "clean": "rimraf dist",
    "test": "jest --passWithNoTests",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "bin": {
    "mcpilot": "./dist/cli/index.js"
  },
  "files": [
    "dist/**/*",
    "package.json",
    "README.md"
  ],
  "keywords": [
    "mcp",
    "llm",
    "cli",
    "typescript"
  ],
  "author": "Idan Yael",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@modelcontextprotocol/sdk": "^1.6.1",
    "@swc/plugin-transform-imports": "^7.0.0",
    "axios": "^1.6.7",
    "commander": "^12.0.0",
    "debug": "^4.3.4",
    "fast-deep-equal": "^3.1.3",
    "llama-node": "^0.1.6",
    "onnxruntime-node": "^1.17.0",
    "openai": "^4.87.3",
    "p-queue": "^7.4.1",
    "stream-json": "^1.8.0",
    "uuid": "^11.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.11.8",
    "@types/debug": "^4.1.12",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
